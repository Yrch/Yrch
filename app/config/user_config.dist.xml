<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://www.symfony-project.org/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:doctrine="http://www.symfony-project.org/schema/dic/doctrine"
    xmlns:swiftmailer="http://www.symfony-project.org/schema/dic/swiftmailer"
    xmlns:doctrine_user="http://www.symfony-project.org/schema/dic/doctrine_user"
    xmlns:doctrine_extensions="http://www.symfony-project.org/schema/dic/doctrine_extensions"
    xsi:schemaLocation="http://www.symfony-project.org/schema/dic/services http://www.symfony-project.org/schema/dic/services/services-1.0.xsd
                        http://www.symfony-project.org/schema/dic/doctrine http://www.symfony-project.org/schema/dic/doctrine/doctrine-1.0.xsd
                        http://www.symfony-project.org/schema/dic/swiftmailer http://www.symfony-project.org/schema/dic/swiftmailer/swiftmailer-1.0.xsd">

    <!-- Doctrine Database Configuration -->
    <doctrine:dbal dbname="xxxxxxxx" user="xxxxxxxx" password="" host="xxxxxxxx" />

    <!-- Swiftmailer Configuration -->
    <swiftmailer:config
        transport="smtp"
        encryption="ssl"
        auth_mode="login"
        host="smtp.gmail.com"
        username="xxxxxxxx"
        password="xxxxxxxx" />

    <!-- DoctrineUserBundle Configuration -->
    <doctrine_user:config db_driver="orm">
        <doctrine_user:class>
            <doctrine_user:model user="Application\YrchBundle\Entity\User" />
        </doctrine_user:class>
        <doctrine_user:confirmation_email enabled="true" from_email="admin@example.org" />
    </doctrine_user:config>

    <!-- DoctrineExtensionsBundle Configuration -->
    <doctrine_extensions:config default_locale="fr" />
</container>