<div class="box">
    <div class="box_head">
        <h3>{% trans "Categories" %}</h3>
    </div>
    <div class="last">
        {% for category in categories %}
            <div class="category">
                <p><a href="{{ path('category_show', {'id': category.id }) }}">{{ category.name }}</a></p>
            </div>
        {% else %}
            <p>{% trans %}No subcategories{% endtrans %}</p>
        {% endfor %}
    </div>
</div>
